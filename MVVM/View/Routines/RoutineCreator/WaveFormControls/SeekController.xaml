<UserControl x:Class="Scene_Maker.MVVM.View.Routines.RoutineCreator.WaveFormControls.SeekController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scene_Maker.MVVM.View.Routines.RoutineCreator.WaveFormControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Border 
        CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="15"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border 
            Grid.Row="0"
            Margin="4"
            CornerRadius="6"
            Background="#3A315C"
                MouseDown="SeekMouseDown"
                >
                <Border 
                    x:Name="Seeker"
                    CornerRadius="6"
                    Width="780"
                    Background="#FFA6A1B7">
                </Border>
            </Border>
        </Grid>

    </Border>
    
</UserControl>
